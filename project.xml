<?xml version="1.0" encoding="UTF-8"?>
<Project xmlns="urn:fdc:difi.no:2017:vefa:structure:Project-1">

    <Name>EHF Get Evidence 0.1</Name>

    <Documentation path="ehf/">EHF Get Evidence documentation</Documentation>

    <!-- Data models -->

    <Resource>
        <Type>Structure-1</Type>
        <Path>structure/datamodel/get-evidence-request.xml</Path>
        <Title>EHF Get Evidence request</Title>
    </Resource>
    <Resource>
        <Type>Structure-1</Type>
        <Path>structure/datamodel/get-evidence-response.xml</Path>
        <Title>EHF Get Evidence response</Title>
    </Resource>


    <!-- Files -->

    <Resource>
        <Type>native:File</Type>
        <Path>rules/example/request-full-example.xml</Path>
        <Title>Full example file for Get Evidence Request, containing all elements and attributes</Title>
        <Property key="download">request-full-examplefull-example.xml</Property>
    </Resource>
    <Resource>
        <Type>native:File</Type>
        <Path>rules/example/request-minimum-example.xml</Path>
        <Title>Minimum example file for Get Evidence Request, containting only mandatory elements and attributes</Title>
        <Property key="download">request-minimum-example.xml</Property>
    </Resource>
    <Resource>
        <Type>native:File</Type>
        <Path>rules/example/response-example-amount.xml</Path>
        <Title>Response example for amount as evidence</Title>
        <Property key="download">response-example-amount.xml</Property>
    </Resource>
    
<!--    Code lists-->
    
    <Resource>
        <Type>CodeList-1</Type>
        <Path>structure/codelist/ISO4217_2015.xml</Path>
    </Resource>
    <Resource>
        <Type>CodeList-1</Type>
        <Path>structure/codelist/ICD.xml</Path>
    </Resource>
    <Resource>
        <Type>CodeList-1</Type>
        <Path>structure/codelist/TrueFalse.xml</Path>
    </Resource>
    
</Project>
